{
    "compilerOptions": {
        "target": "ES6",
        "module": "NodeNext",
        "lib": [
            "ESNext"
        ],
        "rootDir": "./src",
        "outDir": "./lib",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "NodeNext",
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}